.container {
  display: block;
  font-family: PingFang SC;
  /* margin-top: 40px; */
}

.remind {
  background-color: #DDDBF3;
  width: 100%;
  height: 60rpx;
}

.img-remind {
  width: 24rpx;
  height: 24rpx;
}

.text-view {
  font-size:24rpx;
  color: #3400CE;
  margin-left: 10rpx;
}

.tab-container {
  margin-top: 40rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.segmentedControl {
  border-radius: 6px;
  height: 58rpx;
}

.segmentedControl text {
  float: left;
  width: 198rpx;
  font-size: 28rpx;
  color: #3400CE;
  line-height: 56rpx;
  border: 1px solid #3400CE;
  text-align: center;
}

.finish {
  flex: 1;
  width: 92%;
  margin-bottom: 118rpx;
  margin-left: 4%;
  margin-top: 30rpx;
}

.right-text {
  width: 50%;
  font-size: 20rpx;
  color: #fff;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
}

.empty-container {
  width: 93%;
  position: fixed;
  top: 45%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.empty-img {
  width: 166rpx;
  height: 110rpx;
}

.empty-text {
  font-size: 24rpx;
  color: #D0DAFF;
}

.cell-con {
  margin-bottom: 30rpx;
  height: 304rpx;
  display: flex;
  flex-direction: column;
  border-top-right-radius: 6rpx;
  border-top-left-radius: 6rpx;
  border-bottom-left-radius: 6rpx;
  border-bottom-right-radius: 6rpx;
  background: #FFFFFF;
  box-shadow:0rpx 3rpx 10rpx 1rpx rgba(182,182,182,0.31);
}

.top-title {
  display: flex;
  justify-content: space-between;
  padding-bottom: 10rpx;
  border-bottom: 1rpx solid #F4F4F4;
}

.bottom-container {
  display: flex;
  flex: 1;
  flex-direction: column;
  justify-content: space-around;
  border-top: 1rpx solid #e8e8e8;
  border-bottom: 1rpx solid #e8e8e8;
  padding-top: 6rpx;
  padding-bottom: 6rpx;
  font-size: 28rpx;
  color:#8E8E8E;
  padding-left:20rpx;
}

.cancelOrder {
  display:inline-block;
  width:100%;
  height:100%;
  line-height:63rpx;
  text-align:center;
}


