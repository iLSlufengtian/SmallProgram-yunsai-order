page {
  min-height: 100%;
  background-color: #f4f5f7;
}

.container {
  display: flex;
}

.main-container {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 20rpx;
}

.top-container {
  width: 92%;
}

.left-img {
  width: 26rpx;
  height: 33rpx;
}
.top-text{
  font-size:30rpx;
  color:#333333;
  margin-left: 20rpx;

}
.input-send {
  height: 72rpx;
  width: 85%;
  margin-top: 20rpx;
  margin-bottom: 50rpx;
  background-color: #FFFFFF;
  border-radius: 7rpx;
  padding-left: 20rpx;
  font-size: 30rpx;
  color: #333;
  border: 1rpx solid #efefef;
}

.bottom-btn {
  width: 90%;
  height: 80rpx;
  margin-top: 40rpx;
  background-color:#3A70F8;
  border-radius: 7rpx;
}

.text-btn {
  font-size: 30rpx;
  text-align: center;
  line-height: 80rpx;
  color: white;
}
