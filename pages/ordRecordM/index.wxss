.container {
  display: block;
  margin-top: 135rpx;
}

.remind {
  background-color: #DDDBF3;
  width: 100%;
  height: 60rpx;
}

.img-remind {
  width: 24rpx;
  height: 24rpx;
}

.text-view {
  font-size:24rpx;
  color: #3400CE;
  margin-left: 10rpx;
}

.tab-container {
  margin-top:40rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 30rpx;
}

.segmentedControl {
  border-radius: 6px;
  height: 58rpx;
}

.segmentedControl text {
  float: left;
  width: 198rpx;
  font-size: 28rpx;
  color: #3400ce;
  line-height: 56rpx;
  border: 1px solid #3400ce;
  text-align: center;
}

.finish {
  flex: 1;
  width: 92%;
  margin-bottom: 118rpx;
  margin-left: 4%;
  margin-top: 20rpx;
}

.right-text {
  width: 50%;
  font-size: 20rpx;
  color: #fff;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
}

.empty-container {
  width: 93%;
  position: fixed;
  top: 45%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.empty-img {
  width: 166rpx;
  height: 110rpx;
}

.empty-text {
  font-size: 24rpx;
  color: #d0daff;
}

.top-title {
  display: flex;
  justify-content: space-between;
  height: 80rpx;
  align-items: center;
  padding-left:20rpx;
  padding-right:20rpx
}

.title-content {
  width: 360rpx;
  display:-webkit-box;
  -webkit-line-clamp:1;
  overflow:hidden;
  text-overflow:ellipsis;
  -webkit-box-orient:vertical;
  word-break:break-all;
}

.cell-con {
  margin-bottom: 30rpx;
  height: 304rpx;
  display: flex;
  flex-direction: column;
  border-top-right-radius: 6rpx;
  border-top-left-radius: 6rpx;
  border-bottom-left-radius: 6rpx;
  border-bottom-right-radius: 6rpx;
  background: #fff;
  box-shadow: 0rpx 3rpx 10rpx 1rpx rgba(182, 182, 182, 0.31);
}

.bottom-container {
  display: flex;
  flex: 1;
  flex-direction: column;
  justify-content: space-around;
  border-top: 1rpx solid #e8e8e8;
  border-bottom: 1rpx solid #e8e8e8;
  padding-top: 8rpx;
  padding-bottom: 8rpx;
  font-size: 26rpx;
  color: #8e8e8e;
  padding-left: 20rpx;
}

.input-refuse {
  width: 96%;
  height: 212rpx;
  border: 1rpx solid #d7d7d7;
  padding: 10rpx;
}

.cancel {
  font-size: 26rpx;
  width: 100%;
  height: 63rpx;
  padding-top: 5rpx;
  padding-bottom: 5rpx;
}
.calcel-text{
  display:inline-block;width:100%;height:100%;line-height:63rpx;text-align:center;color:#3400CE;
}
