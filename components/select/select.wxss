.com-sContent {
  /* width: 460rpx; */
  background: white;
  font-size: 16px;
  position: relative;
  left: 0rpx;
  top: 0rpx;
  height: 72rpx;
  line-height: 72rpx;
  /* border: 1rpx solid #efefef; */
}

.com-sImg {
  position: absolute;
  right: 10px;
  top: 8px;
  width: 16px;
  height: 16px;
  transition: all 0.3s ease;
}

.add-img {
  width: 16px;
  height: 16px;
  align-self: center;
}

.com-sTxt {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  padding: 0 20px 0 6px;
  font-size: 24rpx;
}

.com-sList {
  /* width: 460rpx; */
  background: white;
  position: absolute;
  border: 1px solid #e2e2e2;
  border-top: none;
  box-sizing: border-box;
  z-index: 3;
  max-height: 120px;
  overflow: auto;
}

.sList-left {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  /* background-color: pink; */
   border-bottom: 1px solid #e2e2e2;
}

.com-sItem {
  width: 100%;
  height: 30px;
  line-height: 30px;
  padding: 0 6px;
  text-align: left;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 24rpx;
  /* color: #3e3e3e; */
}

.com-sItem:first-child {
  border-top: none;
}

.com-wang {
  width: 100%;
  height: 30px;
  line-height: 30px;
  border-top: 1px solid #e2e2e2;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
